# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for text files
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.js text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sh text eol=lf
*.ps1 text eol=lf
*.rb text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Exclude sensitive files from being tracked
obsidian/vault-config.json export-ignore
.env export-ignore
*.secret export-ignore
